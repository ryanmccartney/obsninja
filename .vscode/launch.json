    "version": "0.0.1",
    "configurations": [    
        {
            "command": "npm run development",
            "name": "Dev: OBS Ninja",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceRoot}/.env",
        },
        {
            "command": "npm run production",
            "name": "Prod: OBS Ninja",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceRoot}/.env",
        },
    ]
}